<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20250902_create_table_tokens" author="gennady bakulin">

        <createTable tableName="tokens" remarks="Таблица токенов пользователей">
            <column name="id" type="serial" remarks="Id">
                <constraints primaryKey="true" primaryKeyName="id_pk"/>
            </column>
            <column name="user_email" type="varchar(255)" remarks="Email владельца токена">
                <constraints nullable="false" referencedTableName="users" referencedColumnNames="email"
                             foreignKeyName="user_email_fk"/>
            </column>
            <column name="access_token" type="varchar(255)" remarks="Токен доступа">
                <constraints nullable="false"/>
            </column>
            <column name="refresh_token" type="varchar(255)" remarks="Токен обновления">
                <constraints nullable="false"/>
            </column>
            <column name="is_logged_out" type="boolean" remarks="Отметка о выходе пользователя из системы">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>